<div class="py-5 px-3">
  <div class="card">
    <div class="row no-gutters">
      <div class="col-lg-2 col-md-3 col-sm-4 col-3">
        <%= image_tag @user.picture.url %>
        <!--img class="user_imgs" src="/assets/user1.png" /-->
      </div>

<div class="py-5">
  <div class="text-center pb-5">
    <h2>最新の発見情報</h2>
  </div>
  
  <% @creatures_infos.each do |creatures_info| %>
    <div class="card creatures_card mx-auto" >
      <div class="card-title p-2 ">
          <%= link_to user_path(creatures_info.user.id), class: "link_color" do %>
            <% if creatures_info.user.picture? %>
              <%= image_tag creatures_info.user.picture.url, class: "creatures_infos_user_icon" %>
            <% else %>
              <%= image_tag "default_user.png", class: "creatures_infos_user_icon" %>
            <% end %>
            <%= creatures_info.user.name %>
          <% end %>
      </div>
      <%= link_to creatures_info_path(creatures_info), class: "link_color" do %>
        <% if creatures_info.picture? %>
          <%= image_tag creatures_info.picture.url, class: "card-img-top creature_img" %>
        <% else %>
          <img class="card-img-top creature_imgs" src="/assets/nophoto.png">
        <% end %>
        <div class="card-body">
          <div class="card-text">
            <%= creatures_info.content %>
          </div>
        </div>
      <% end %>
      <div class="text-right p-2 time_color">
        <%= creatures_info.created_at.to_s(:human)%>
      </div>
    </div>
    <br>
  <% end %>

  <nav aria-label="...">
    <ul class="pagination justify-content-center py-5" >
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item active">
        <span class="page-link">
          2
          <span class="sr-only">(current)</span>
        </span>
      </li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
  </nav>
</div>
<!-- ログイン画面 -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="text-center mb-5 pb-5 px-3">
    <h3 class="form-title py-5">See Dotにログイン</h3>
    <div class="field form-group text-left py-3">
      <small class="label_title"><%= f.label :Eメール %></small><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>      
    </div>

    <div class="field form-group text-left py-3">
      <small class="label_title"><%= f.label :パスワード %></small><br />
      <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group py-2">
       <%= f.check_box :remember_me %>
        <%= f.label :ログインしたままにする %>
      </div>
    <% end %>

    <div class="actions py-5">
      <%= f.submit "ログイン" ,class:"btn btn_width btn-primary" %>
    </div>
    <%= render "users/shared/links" %>
  </div>  
<% end %>

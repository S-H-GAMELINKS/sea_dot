<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="text-center">
    <div class="mb-5 pb-5 px-3">
      <h3 class="form-title py-5">アカウント作成</h3>

      <div class="field form-group text-left py-3">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:"form-control" %>
      </div>

      <div class="field form-group text-left py-3">
        <%= f.label :Eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" %>      
      </div>

      <div class="field form-group text-left py-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control" %>
      </div>

      <div class="field form-group text-left py-3">
        <%= f.label :確認用パスワード %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control" %>
      </div>

      <div class="actions py-5">
        <%= f.submit "新規登録" ,class:"btn btn_spread btn-primary btn-block rounded-pill" %>
      </div>

      <%= render "users/shared/links" %>
    </div>    
  </div>  
<% end %>
